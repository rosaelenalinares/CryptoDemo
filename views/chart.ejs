<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="A layout example with a side menu that
      hides on mobile, just like the Pure website.">
    <title>My-app</title>
    <link rel="icon" href="data:;base64,iVBORw0KGgo=">
    <link rel="stylesheet"
      href="https://unpkg.com/purecss@2.0.6/build/pure-min.css"
      integrity="sha384-Uu6IeWbM+gzNVXJcM9XV3SohHtmWE+3VGi496jvgX1jyvDTXfdK+rfZc8C1Aehk5"
      crossorigin="anonymous">
    <link rel="stylesheet" type="text/css"
      href="/static/stylesheets/stylepure.css">
    <link rel="stylesheet" type="text/css"
      href="/static/stylesheets/style.css">
  </head>
  <body class="chart">

    <div id="layout">
      <!-- Menu toggle -->
      <a href="#menu" id="menuLink" class="menu-link">
        <!-- Hamburger icon -->
        <span></span>
      </a>

      <div id="menu">
        <div class="pure-menu">
          <a class="pure-menu-heading" href="/">Home</a>

          <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="coins"
                class="pure-menu-link">Cryptocurrencies</a></li>
            <li class="pure-menu-item"><a href="chart"
                class="pure-menu-link">Chart</a></li>

            <li class="pure-menu-item menu-item-divided
              pure-menu-selected">
              <a href="news" class="pure-menu-link">News</a>
            </li>

            <li class="pure-menu-item"><a href="Comment"
                class="pure-menu-link">Room</a></li>
          </ul>
        </div>
      </div>

      <div id="main">
          <!-- TradingView Widget BEGIN -->
          <div class="widget">
            <div class="tradingview-widget-container">
              <div id="tradingview_d0447"></div>
              <div class="tradingview-widget-copyright"><a
                  href="https://www.tradingview.com/symbols/BTCUSD/?exchange=COINBASE"
                  rel="noopener" target="_blank"><span class="blue-text">BTCUSD
                    Chart</span></a>
                by TradingView</div>
              <script type="text/javascript"
                src="https://s3.tradingview.com/tv.js"></script>
              <script type="text/javascript">
                    new TradingView.widget(
                      {
                        "width": 1193,
                        "height": 640,
                        "symbol": "COINBASE:BTCUSD",
                        "interval": "D",
                        "timezone": "Etc/UTC",
                        "theme": "light",
                        "style": "1",
                        "locale": "en",
                        "toolbar_bg": "#f1f3f6",
                        "enable_publishing": true,
                        "hide_side_toolbar": false,
                        "allow_symbol_change": true,
                        "studies": [
                          "MACD@tv-basicstudies"
                        ],
                        "container_id": "tradingview_d0447"
                      }
                    );
              </script>
            </div>
          </div>
          <!-- TradingView Widget END -->



          <!-- TradingView Widget BEGIN -->
          <div id="widget-container">
            <div class="tradingview-widget-container">
              <div id="tradingview_71ab1"></div>
              <div class="tradingview-widget-copyright"><a
                  href="https://www.tradingview.com/symbols/BTCUSD/?exchange=COINBASE"
                  rel="noopener" target="_blank"><span class="blue-text">BTCUSD
                    Chart</span></a> by TradingView</div>
              <script type="text/javascript"
                src="https://s3.tradingview.com/tv.js"></script>
              <script type="text/javascript">
                new TradingView.widget(
                {
                "width": 310,
                "height": 500,
                "symbol": "COINBASE:BTCUSD",
                "interval": "D",
                "timezone": "Etc/UTC",
                "theme": "light",
                "style": "1",
                "locale": "en",
                "toolbar_bg": "#f1f3f6",
                "enable_publishing": false,
                "allow_symbol_change": true,
                "container_id": "tradingview_71ab1"
                }
                );
              </script>
            </div>
          </div>
          <!-- TradingView Widget END -->
      </div>
    </div>
      <script src="static/scripts/ui.js"></script>
  </body>
</html>